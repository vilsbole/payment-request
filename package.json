{
	"name": "next-template",
	"description": "Next.js Starter Template with TypeScript, Tailwindcss, Shadcn-ui, ESLint, and Prettier",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbo",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"preview": "next build && next start",
		"type:check": "tsc --noEmit",
		"format": "prettier --write \"src/**/*.{ts,tsx,mdx}\" --cache",
		"format:check": "prettier --check \"src/**/*.{ts,tsx,mdx}\" --cache",
		"ci-check": "pnpm lint && pnpm type:check && pnpm format:check",
		"fix-all": "pnpm lint:fix && pnpm format"
	},
	"dependencies": {
		"@hookform/resolvers": "^3.9.0",
		"@radix-ui/react-label": "^2.1.0",
		"@radix-ui/react-slot": "^1.1.0",
		"bip21": "^3.0.0",
		"bip39": "^3.1.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"coininfo": "^5.2.1",
		"coinkey": "^3.0.0",
		"eslint-plugin-prettier": "^5.2.1",
		"hdkey": "^2.1.0",
		"lucide-react": "^0.439.0",
		"next": "^14.2.8",
		"next-themes": "^0.3.0",
		"qr-encode": "^0.3.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-hook-form": "^7.53.0"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.3.1",
		"@t3-oss/env-nextjs": "^0.11.1",
		"@types/hdkey": "^2.0.3",
		"@types/node": "22.5.4",
		"@types/react": "18.3.5",
		"@types/react-dom": "18.3.0",
		"@typescript-eslint/eslint-plugin": "^8.4.0",
		"@typescript-eslint/parser": "^8.4.0",
		"autoprefixer": "10.4.20",
		"eslint": "9.10.0",
		"eslint-config-next": "14.2.8",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-react": "^7.35.2",
		"eslint-plugin-tailwindcss": "^3.17.4",
		"postcss": "8.4.45",
		"prettier": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.6",
		"shadcn-ui": "^0.9.0",
		"tailwind-merge": "^2.5.2",
		"tailwindcss": "3.4.11",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.5.4",
		"zod": "^3.23.8"
	}
}
